function () {
  var dlvFirstName = {{user-dlv-firstname}};
  var inputElement = document.querySelector('[id="firstname"]');
  var inputFirstName = inputElement ? inputElement.value : undefined;

  var firstname = dlvFirstName || inputFirstName;
  
  if (firstname) {
    var formatted = firstname.toLowerCase()
      .normalize("NFD")
      .replace(/[\u0300-\u036f]/g, "")
      .replace(/[^a-zA-Z]/g, "");

    var expirationDate = new Date();
    expirationDate.setDate(expirationDate.getDate() + 30);
    document.cookie = "LeadFirstName=" + encodeURIComponent(formatted) +
                      "; expires=" + expirationDate.toUTCString() +
                      "; path=/";

    return formatted;
  }
  return null;
}

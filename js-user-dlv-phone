function () {
  var phonenumber = {{dlv-phone}};
  if (phonenumber === null || phonenumber === undefined) {
    return undefined;
  }

  // Remove caracteres não numéricos
  var numero = String(phonenumber).replace(/\D/g, '');

  // Aceita: 11 dígitos (sem DDI) OU 13 dígitos iniciando com 55
  if (numero.length === 11) {
    numero = '55' + numero;
  } else if (numero.length === 13 && numero.indexOf('55') === 0) {
    // já está com 55
  } else {
    return undefined;
  }

  return numero;
}

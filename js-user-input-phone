function () {
  // Seleciona o campo pelo ID
  var phoneInput = document.querySelector('[id="phone"]');
  if (!phoneInput || !phoneInput.value) {
    return undefined;
  }

  // Remove caracteres não numéricos
  var numero = String(phoneInput.value).replace(/\D/g, '');

  // Aceita: 11 dígitos (sem DDI) OU 13 dígitos começando com 55 (com DDI)
  if (numero.length === 11) {
    numero = '55' + numero;
  } else if (numero.length === 13 && numero.indexOf('55') === 0) {
    // já está com 55
  } else {
    return undefined;
  }

  return numero;
}

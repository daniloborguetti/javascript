function() {
  var dataLayer = {{dlv matriz items}}; // Substitua pelo nome da sua variÃ¡vel

  var totalQuantity = 0;

  for (var key in dataLayer) {
    if (dataLayer.hasOwnProperty(key)) {
      var item = dataLayer[key];
      var quantity = item.quantity ? parseInt(item.quantity) : 0;
      var itemId = item.item_id;

      totalQuantity += (quantity > 0 ? quantity : (itemId ? 1 : 0));
    }
  }

  return totalQuantity;
}

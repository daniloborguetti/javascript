function getPeriodOfDay() {
    var now = new Date();
    var hours = now.toLocaleString("pt-BR", { timeZone: "America/Sao_Paulo" }).split(" ")[1].split(":")[0];
    hours = parseInt(hours, 10);

    if (hours >= 6 && hours < 12) {
        return "manhÃ£";
    } else if (hours >= 12 && hours < 18) {
        return "tarde";
    } else if (hours >= 18 && hours < 24) {
        return "noite";
    } else {
        return "madrugada";
    }
}

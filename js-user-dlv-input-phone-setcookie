function () {
  var dlvPhone = {{user-dlv-phone}};
  var inputElement = document.querySelector('[id="phone"]');
  var inputPhone = inputElement ? inputElement.value : undefined;

  // Prioriza DLV, fallback para input
  var phonenumber = dlvPhone || inputPhone;

  if (phonenumber === null || phonenumber === undefined) {
    return undefined;
  }

  var numero = String(phonenumber).replace(/\D/g, '');

  // Aceita: 11 dígitos (sem DDI) OU 13 dígitos começando com 55 (com DDI)
  if (numero.length === 11) {
    numero = '55' + numero;
  } else if (numero.length === 13 && numero.indexOf('55') === 0) {
    // já está com 55
  } else {
    return undefined;
  }

  // Cookie por 30 dias (somente após validação)
  var expirationDate = new Date();
  expirationDate.setDate(expirationDate.getDate() + 30);

  document.cookie =
    "LeadPhone=" + encodeURIComponent(numero) +
    "; expires=" + expirationDate.toUTCString() +
    "; path=/";

  return numero;
}

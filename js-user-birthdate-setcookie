function formatBirthdateSetCookie(name, value, days) {
  var expirationDate = new Date();
  expirationDate.setDate(expirationDate.getDate() + days);
  var expires = "expires=" + expirationDate.toUTCString();
  document.cookie = name + "=" + value + "; " + expires;
}

function formatarDataNascimento() {
  var birthdate = document.querySelector('input[id="birthdate"]').value;
  var partes = birthdate.split('/');
  if (partes.length !== 3) {
    return 'Data inv√°lida';
  }
  var dia = partes[0].padStart(2, '0');
  var mes = partes[1].padStart(2, '0');
  var ano = partes[2];
  var dataFormatada = ano + mes + dia;

  // Define o nome do cookie e valor
  var cookieName = "dataNascimento";
  var cookieValue = dataFormatada;

  // Define o prazo de validade do cookie em 30 dias
  var diasValidade = 30;

  // Define o cookie com prazo de validade de 30 dias
  setCookie(cookieName, cookieValue, diasValidade);

  return dataFormatada;
}

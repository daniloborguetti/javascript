function capturarDDIETelefoneEArmazenarEmCookie() {
    // Mapeia as siglas dos países para seus respectivos DDIs
    var ddiPorPais = {
        "BR": "55",
        "AF": "93",
        "ZA": "27",
        // Adicione mais países e seus DDIs de acordo com o Menu do Formulário
    };

    // Tenta encontrar o campo de telefone pelo ID
    var phoneInput = document.getElementById('whatsapp-component-phone');
    if (phoneInput) {
        // Lê o atributo data-country do campo de telefone
        var codigoPais = phoneInput.getAttribute('data-country');
        // Usa o código do país para encontrar o DDI correspondente na tabela de consulta
        var ddi = ddiPorPais[codigoPais];
        
        // Captura o valor do input do telefone, removendo caracteres não numéricos
        var numeroTelefone = phoneInput.value.replace(/\D/g, '');

        if (ddi && numeroTelefone) {
            // Concatena o DDI e o número do telefone
            var valorFinal = ddi + numeroTelefone;

            // Define o valor em um cookie com validade de 30 dias a partir da data atual
            var expirationDate = new Date();
            expirationDate.setDate(expirationDate.getDate() + 30);
            document.cookie = "LeadPhone=" + valorFinal + "; expires=" + expirationDate.toUTCString() + "; path=/";

            return valorFinal;
        } else {
            console.log('DDI ou número de telefone não encontrado.');
            return 'DDI ou número de telefone não encontrado'; // Ou retorne um valor padrão ou erro
        }
    } else {
        console.log('Campo de telefone não encontrado.');
        return 'Campo de telefone não encontrado'; // Ou retorne um valor padrão ou erro
    }
}
